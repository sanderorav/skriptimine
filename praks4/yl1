#!/bin/bash

while true; do
	echo -n "Sisesta suvaline t채isarv: "
	read arv
        if [[ "$arv" =~ ^[0-9]+$ ]]; then
                echo "$arv"
                break
        else
                echo "Viga: Sisestatud v채채rtus pole t채isarv."
        fi
done


if (($arv % 2 == 0)); then
	echo "Antud arv on paaris."
else
	echo "Antud arv on paaritu."
fi
